<Window
  x:Class="ArrangeElements.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ArrangeElements"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:view="clr-namespace:ArrangeElements.View"
  xmlns:vm="clr-namespace:ArrangeElements.ViewModel"
  Title="MainWindow"
  Width="1500"
  Height="750"
  d:DataContext="{d:DesignInstance Type=vm:MainViewModel,
                                   IsDesignTimeCreatable=False}"
  Background="#33363F"
  mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>

    <view:MainView Grid.Row="0" />
    <Button
      Grid.Row="1"
      Command="{Binding Path=ArrangeCommand, Mode=OneWay}"
      Content="Arrange" />
  </Grid>

</Window>
