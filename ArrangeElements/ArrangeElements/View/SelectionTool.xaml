<UserControl
  x:Class="ArrangeElements.View.SelectionTool"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ArrangeElements.View"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">

  <UserControl.Resources>
    <SolidColorBrush x:Key="Selection.Fill" Color="#5AFFFFFF" />
    <SolidColorBrush x:Key="Selection.Stroke" Color="#78C1BA" />
  </UserControl.Resources>

  <Path
    x:Name="Selection"
    Fill="{StaticResource ResourceKey=Selection.Fill}"
    Opacity="1"
    Stroke="{StaticResource ResourceKey=Selection.Stroke}"
    StrokeDashArray="5 1"
    StrokeThickness="1.5" />
</UserControl>
